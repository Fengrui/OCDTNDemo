<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="info.fshi.oppnetdemo.RegistrationActivity" >

    <ImageView 
        android:background="@drawable/imperial_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" />
    
    <Button
        android:id="@+id/registration_buttion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/connect_button"
        android:focusable="false"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/action_register"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/start_application_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/connect_outdated_button"
        android:focusable="false"
        android:gravity="center"
        android:enabled="false"
        android:padding="1dp"
        android:text="@string/action_enter_app"
        android:textColor="#ffffff" />

</LinearLayout>